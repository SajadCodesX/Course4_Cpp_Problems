// Problem #8 pass and Fail - course 4.cpp : This file contains the 'main' function. Program execution begins and ends there.

#include <iostream>
using namespace std;

enum enPassFail { Pass = 1, Fail = 2 };


int ReadMark()
{
	int Mark;
	cout << "Please enter a Mark: \n";
	cin >> Mark;

	return Mark;
}
enPassFail CheckpassFail(int Mark)
{
	
	if (Mark >= 50)
		return enPassFail::Pass;
	else
		return enPassFail::Fail;
}

void PrintResult(int Mark)
{
	if (CheckpassFail(Mark) == enPassFail::Pass)
		cout << "\n You passed.\n";

	else
		cout << "\n Your failed \n";

}
int main()
{
	PrintResult(ReadMark());
	return 0;
}
